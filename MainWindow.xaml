<Window x:Class="StockManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagement"
        mc:Ignorable="d"
        Title="Admin Login" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Stock Management" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0 0 0 10"/>

            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0 0 0 10"/>

            <Button Content="Login" Width="100" Click="LoginButton_Click"/>

            <TextBlock x:Name="LoginResultText" Foreground="Red" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>